<link rel="stylesheet" href="/css/modal.css" />

<!-- Modal System -->
<div
  class="modal fade"
  id="modalSystem"
  tabindex="-1"
  aria-labelledby="longTitleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      {{! <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="position: absolute; top: 10px; right: 10px;"></button> }}
      <div class="modal-header">
        <div id="carouselExample" class="carousel slide">
          <div class="carousel-inner">
            <div class="img-modal carousel-item active">
              <img src="https://cdn.tgdd.vn/Files/2022/05/13/1432307/co-nen-mua-itel-isw-41-6_1280x720-800-resize.jpg" class="d-block w-100" alt="" />
            </div>
            <div class="img-modal carousel-item">
              <img src="https://cdn.tgdd.vn/Files/2022/05/13/1432307/co-nen-mua-itel-isw-41-4_1280x720-800-resize.jpg" class="d-block w-100" alt="" />
            </div>
            <div class="img-modal carousel-item">
              <img src="https://cdn.tgdd.vn/Files/2022/05/21/1434123/donghothongminhthethao6_1280x720-800-resize.jpg" class="d-block w-100" alt="" />
            </div>
          </div>
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselExample"
            data-bs-slide="prev"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#carouselExample"
            data-bs-slide="next"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
        {{! <img class="rounded" src="/img/13.png" style="height: 500px;width: 100%;" alt=""> }}
      </div>
      {{!-- <div class="modal-body">
        <p>
          Modal content goes here. You can add any content you want.
        </p>
      </div> --}}
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Close</button>
      </div>
    </div>
  </div>
</div>
<!-- End Modal System -->

<!-- Modal Activation Script -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
></script>

<!-- Modal Activation Script -->
<script>
  // Wait for the DOM to be ready
  $(document).ready(function () {
    // Check if it's the Home page
    if (window.location.pathname === "/") {
      // Show the modal with the ID 'modalSystem'
      $("#modalSystem").modal("show");
    }
  });
</script>